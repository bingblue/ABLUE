<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/main_page_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/main_page_setting_item_split_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#333333" />

        <com.zing.ablue.mainpage.widget.NativeIconTextView
            android:id="@+id/main_page_setting_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="&#61444;"
            android:textColor="#888888"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/main_page_setting_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/main_page_setting_item_icon"
            android:singleLine="true"
            android:text="唉，别点我，我懒得理你"
            android:textColor="#888888"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/main_page_setting_item_remind_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/red_oval_background"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:text="99+"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </RelativeLayout>
</FrameLayout>